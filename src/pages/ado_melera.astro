<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      sitename="Ado Melera"
      position="left"
      actions={[
        {
          text: 'Volver',
          variant: 'primary',
          href: '/',
        },
      ]}
      isSticky
