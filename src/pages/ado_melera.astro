      },
    ]}
    image={{
      src: '/images/ado/238A6722c.webp',
      alt: 'Bienvenida',
      style: 'aspect-ratio: 1/1; object-fit: cover;',
    }}
    classes={{ itemClasses: 'list-disc', Headline: 'text-m' }}
